set encoding iso_8859_1
set key right
set grid
set xdata time
set timefmt "%d/%m/%Y %H:%M:%S"
set xtics rotate by 45 right
set format x "%d/%m/%Y %H:%M"
set xlabel "Heures"
set ylabel "Kbit/s"
set style line 1 lw 1

set title "Débit à la reconnexion"
set output "courbe-down-up.png"
set terminal png size 1024,768 enhanced font "Verdana,10"
plot "deco_reco_download.txt" using 1:($3) title "Débit Descendant" with impulses, \
     "deco_reco_upload.txt" using 1:($3) title "Débit Montant" with impulses
